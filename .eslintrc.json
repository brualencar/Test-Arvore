{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": [
          "./tsconfig.json"
        ]
    },
    "plugins": [
        "react",
        "prettier",
        "eslint-plugin-prettier"
    ],
    "rules": {
        "no-console": [
            "warn",
            {
                "allow": [
                    "error"
                ]
            }
        ]
    }
}
